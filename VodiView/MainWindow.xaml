<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VodiView"
        mc:Ignorable="d"
        Title="VodiView"  Background="Black" WindowStyle="None" WindowStartupLocation="CenterScreen" WindowState="Maximized" ResizeMode="NoResize">
	<Grid>
		<Image x:Name="gImage" Width="100" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Fill" />
		<local:CommandBar x:Name="gWindowBar" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Top" Opacity="0"/>
		<Label x:Name="gInformation" Content="&lt;Information&gt;" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Bottom" Foreground="White" Visibility="Hidden">
			<Label.Effect>
				<DropShadowEffect/>
			</Label.Effect>
		</Label>
	</Grid>
</Window>
